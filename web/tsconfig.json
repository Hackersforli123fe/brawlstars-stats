{
  "compilerOptions": {
    "strict": true,
    "module": "ES2022",
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": [
      "vite/client",
      "vavite/vite-config",
      "@types/jest",
      "vite-plugin-pwa/client",
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    }
  },
  "exclude": [
    "../klicker"
  ]
}

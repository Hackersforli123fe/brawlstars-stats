{
  "compilerOptions": {
    "strict": true,
    "module": "ES2022",
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": [
      "vite/client",
      "@types/jest"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    }
  },
  "ts-node": {
    "esm": true,
    "swc": true,
    "transpileOnly": true,
    "experimentalResolver": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "module": "node16"
    }
  },
  "exclude": [
    "../klicker"
  ]
}
